<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jekill.sumit">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="jekill.sumit.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="jekill.sumit.GameActivity" />
        <activity android:name="jekill.sumit.SettingsScreen" />
        <activity android:name="jekill.sumit.GameScoreActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="jekill.sumit.GameScore"
            android:label="@string/title_activity_game_score"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>